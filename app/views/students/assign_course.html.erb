 <%= form_for(@student) do |f| %>

 <% title "Student"%>
<p>
  <strong>Name:</strong>
  <%= @student.name %>
</p>
<p>
  <strong>Age:</strong>
  <%= @student.age %>
</p>
 <% for course in Course.find(:all) %>
<div>
  <%= check_box_tag 'student[course_ids][]', course.id, @student.courses.include?(course) %>
  <%= course.name %>
</div>
 <%end%>
<p><%= f.submit %></p>
 
 <% end %>