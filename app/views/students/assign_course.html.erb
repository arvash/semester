<%= form_for :student, :url=> save_course_student_path(params[:id]) do |f| %>

  <% title "Student"%>
    <p>
    <strong>Name:</strong>
    <%= @student.name %>
  </p>
  <p>
    <strong>Age:</strong>
    <%= @student.age %>
  </p>
  <% for course in Course.find(:all) %>
    <%if course.user_id==current_user.id%>
      <div>
        <%= check_box_tag 'student[course_ids][]', course.id, @student.courses.include?(course) %>
        <%= course.name %>
      </div>
    <%end%>
  <%end%>
  <p><%= f.submit%></p>
  <%= link_to "Back", student_path %>
<% end %>