<% title "Students" %>



<table>
  <tr>
    <th>Name</th>
    <th>Age</th>
  </tr>
  <% for student in @students %>
    <tr>
      <td><%= student.name %></td>
      <td><%= student.age %></td>
      <td><%= link_to "Show", student %>
        <%if student.user_id==current_user.id%>
          |<%= link_to "Assign", assign_course_student_path(student) %>|
          <%= link_to "Edit", edit_student_path(student) %>|
          <%= link_to "Destroy", student, :confirm => 'Are you sure?', :method => :delete %></td>
      <%end%>
    </tr>
  <% end %>
</table>

<p><%= link_to "Add Student", new_student_path %> |<%= link_to "Add Course", new_course_path %></p>

  
  
